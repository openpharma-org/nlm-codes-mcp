# =================================
# MCP Server Environment Configuration
# =================================
# Copy this file to .env and customize the values for your environment
# This file should be committed to version control as documentation
# The actual .env file should NEVER be committed to version control

# ---------------------------------
# Server Configuration
# ---------------------------------

# Server identification
SERVER_NAME=mcp-server-template
SERVER_VERSION=0.1.1

# Transport protocols - choose one or both
# Set to 'true' to enable, 'false' or unset to disable
USE_HTTP=false
USE_SSE=false

# Server port (required if HTTP or SSE is enabled)
# Default: 3000
PORT=3000

# Server-Sent Events path (only relevant if USE_SSE=true)
# Default: /mcp
SSE_PATH=/mcp

# ---------------------------------
# Logging Configuration  
# ---------------------------------

# Log level: error, warn, info, debug
# Default: info
LOG_LEVEL=info

# ---------------------------------
# Development Configuration
# ---------------------------------

# Node environment: development, production, test
# Default: production
NODE_ENV=production

# Enable development features (hot reload, verbose errors, etc.)
# Default: false
DEV_MODE=false

# Enable debug mode for troubleshooting
# Default: false
DEBUG=false

# ---------------------------------
# Security Configuration
# ---------------------------------

# CORS origins (comma-separated list for HTTP/SSE transports)
# Default: * (allow all - change for production)
CORS_ORIGINS=*

# Request timeout in milliseconds
# Default: 30000 (30 seconds)
REQUEST_TIMEOUT=30000

# Maximum request body size in bytes
# Default: 1048576 (1MB)
MAX_REQUEST_SIZE=1048576

# ---------------------------------
# Performance Configuration
# ---------------------------------

# Enable performance monitoring
# Default: false
ENABLE_PERFORMANCE_MONITORING=false

# Performance metrics collection interval in milliseconds
# Default: 60000 (60 seconds)
METRICS_INTERVAL=60000

# Maximum concurrent connections (for HTTP/SSE)
# Default: 100
MAX_CONNECTIONS=100

# ---------------------------------
# Feature Flags
# ---------------------------------

# Enable experimental features
# Default: false
ENABLE_EXPERIMENTAL_FEATURES=false

# Enable advanced math operations
# Default: true
ENABLE_MATH_TOOLS=true

# Enable example tools
# Default: true
ENABLE_EXAMPLE_TOOLS=true

# ---------------------------------
# Operational Configuration
# ---------------------------------

# Health check endpoint path
# Default: /health
HEALTH_CHECK_PATH=/health

# Graceful shutdown timeout in milliseconds
# Default: 10000 (10 seconds)
SHUTDOWN_TIMEOUT=10000

# Process title (useful for process monitoring)
PROCESS_TITLE=mcp-server

# =================================
# Environment-Specific Examples
# =================================

# Development Example:
# NODE_ENV=development
# LOG_LEVEL=debug
# DEV_MODE=true
# DEBUG=true
# USE_HTTP=true
# PORT=3000
# CORS_ORIGINS=*
# ENABLE_PERFORMANCE_MONITORING=false

# Production Example:
# NODE_ENV=production
# LOG_LEVEL=info
# USE_HTTP=true
# PORT=8080
# CORS_ORIGINS=https://myapp.com,https://api.myapp.com
# ENABLE_PERFORMANCE_MONITORING=true
# REQUEST_TIMEOUT=15000
# MAX_CONNECTIONS=200

# Testing Example:
# NODE_ENV=test
# LOG_LEVEL=warn
# PORT=0
